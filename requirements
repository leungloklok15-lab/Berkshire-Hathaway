# Check and install required packages
required_packages = [
    'streamlit',
    'yfinance',
    'pandas',
    'numpy',
    'plotly',
    'matplotlib',
    'seaborn',
    'openpyxl',
    'kaleido',
    'python-dateutil'
]

for package in required_packages:
    try:
        __import__(package)
    except ImportError:
        subprocess.check_call([sys.executable, "-m", "pip", "install", package])
